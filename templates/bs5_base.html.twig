<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {% block ddr_head_meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    {% endblock ddr_head_meta %}
    <title>{% block title %}{% endblock title %}</title>
    {% block ddr_stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block ddr_javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block ddr_body %}

    {% block ddr_navbar %}
        <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <div class="container">
                {% block ddr_navbar_brand %}
                    <a class="navbar-brand" href="#">dontdrinkandroot</a>
                {% endblock ddr_navbar_brand %}
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% block ddr_navbar_collapse_content %}
                        {{ knp_menu_render('ddr_navbar_left',{'attributes':{'classes': ['me-auto','mb-0','mb-lg-0']}},'ddr_navbar_bs5') }}
                        {{ knp_menu_render('ddr_navbar_right',{'attributes':{'classes': ['mb-0','mb-lg-0']}},'ddr_navbar_bs5') }}
                    {% endblock ddr_navbar_collapse_content %}
                </div>
            </div>
        </nav>
    {% endblock ddr_navbar %}

    {% block ddr_main %}
        <main class="container">
            {% block ddr_main_container_content %}
            {% endblock ddr_main_container_content %}
        </main>
    {% endblock ddr_main %}

    {% block ddr_footer %}
    {% endblock ddr_footer %}

{% endblock ddr_body %}
</body>
</html>
