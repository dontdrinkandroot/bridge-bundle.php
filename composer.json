{
    "name": "dontdrinkandroot/bridge-bundle",
    "type": "symfony-bundle",
    "description": "Dontdrinkandroot specific bridges",
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Philip Washington Sorst",
            "email": "philip@sorst.net",
            "homepage": "https://sorst.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dontdrinkandroot\\BridgeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dontdrinkandroot\\BridgeBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.5",
        "ext-sodium": "*",
        "dontdrinkandroot/common": "^0.3",
        "symfony/config": "^7.4",
        "symfony/dependency-injection": "^7.4",
        "symfony/http-kernel": "^7.4",
        "symfony/process": "^7.4",
        "symfony/yaml": "^7.4"
    },
    "require-dev": {
        "api-platform/doctrine-orm": "^4.2",
        "doctrine/doctrine-fixtures-bundle": "^4.3",
        "dontdrinkandroot/api-platform-bundle": "^0.5",
        "dontdrinkandroot/bootstrap-bundle": "^0.5",
        "dontdrinkandroot/crud-admin-bundle": "^0.5",
        "dontdrinkandroot/doctrine-bundle": "^0.5",
        "dontdrinkandroot/symfony-version-enforcer": "^0.1.0",
        "knplabs/knp-menu-bundle": "^3.7",
        "league/commonmark": "^2.8",
        "liip/test-fixtures-bundle": "^3.7",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.5",
        "symfony/browser-kit": "^7.4",
        "symfony/expression-language": "^7.4",
        "symfony/mailer": "^7.4",
        "symfony/validator": "^7.4",
        "symfony/runtime": "^7.4"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dontdrinkandroot/symfony-version-enforcer": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "require": "7.4.*",
            "allow-contrib": true
        },
        "branch-alias": {
            "dev-main": "0.5.x-dev"
        }
    }
}
